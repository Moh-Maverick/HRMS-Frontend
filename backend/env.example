# Environment variables for HRMS Backend - Gemini Configuration
# Copy this file to .env and fill in your actual values

# Gemini API Configuration (Required for AI-powered JD generation)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Firebase Configuration
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
FIREBASE_STORAGE_BUCKET=your-firebase-bucket-name

# Backend Configuration
BACKEND_BASE=http://localhost:8000

# Optional: LLM Provider (defaults to gemini)
LLM_PROVIDER=gemini